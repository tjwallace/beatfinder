<h1>Listing songs</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Title</th>
    <th>Site</th>
    <th>Url</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.artist %></td>
    <td><%= link_to song.title, song %></td>
    <td><%= link_to song.site, song.site %></td>
    <td><%= link_to 'URL', song.url %></td>
    <td><%= song.active ? 'Yes' : 'No' %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

