<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "Beatfinder" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>

<%- flash.each do |name, msg| -%>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<%- end -%>

<%- if show_title? -%>
  <h1><%=h yield(:title) %></h1>
<%- end -%>

<%= yield %>
</body>
</html>
