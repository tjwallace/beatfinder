!!!
%html
  %head
    %title= yield(:title) || "Beatfinder"
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :head
  %body
    #wrapper
      #flashes
        - flash.each do |name, msg|
          %div{:id => "flash_#{name}"}= msg

      - if show_title?
        %h1= yield :title
      
      #content= yield

      #playlist= render :partial => "playlists/playlist", :object => @current_playlist
