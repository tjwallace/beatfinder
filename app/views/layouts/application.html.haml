!!!
%html
  %head
    %title= yield(:title) || "Beatfinder"
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.editinplace.js'
    = javascript_include_tag 'swfobject.js'
    = yield(:head) if content_for?(:head)
    = csrf_meta_tag
  %body
    #wrapper
      #flashes
        - flash.each do |name, msg|
          %div{:class => "flash_#{name}"}= msg

      - if show_title?
        %h1= yield :title

      #user_box= render :partial => "users/user_box"
      
      #content= yield

      = link_to 'show/hide', '#', :id => 'playlist_toggle'

      #playlist
        = render :partial => 'playlists/playlist', :object => @current_playlist
